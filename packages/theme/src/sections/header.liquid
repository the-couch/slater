{% comment %}
  Considerations for the header:
    1. Schema.org tags
      - <h1 itemscope itemtype='http://schema.org/Organization'>
      - itemprop [url, logo] etc
{% endcomment %}

<header role='banner' id='header' data-component='header' class='slater-header z8 fix left top x bg-white'>
  <div class='outer'>
    <div class='container--l mxa'>
      <div class='slater-header__inner f jcb aic'>
        <h1 itemscope itemtype='http://schema.org/Organization' class='p'>
          <a href='/'>slater</a>
        </h1>

        <div class='f jcb fw'>
          <a href='/cart' class='block js-cart-drawer-toggle'>
            Cart
            (<span class='js-cart-count'>{{ cart.item_count }}</span>)
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<div class='slater-header__spacer'></div>
